#!/bin/bash

HISTCONTROL=ignoredups
HISTFILE=${BASHDOTDIR}/.bash_history
HISTFILESIZE=500000
HISTSIZE=10000
[ -f /usr/share/bash-completion/bash_completion ] && . /usr/share/bash-completion/bash_completion
shopt -s autocd
shopt -s cdspell
shopt -s checkhash
shopt -s checkjobs
shopt -s checkwinsize
shopt -s cmdhist
shopt -s dirspell
shopt -s extglob
shopt -s globstar
shopt -s histreedit
shopt -s hostcomplete
